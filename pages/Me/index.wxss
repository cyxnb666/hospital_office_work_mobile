page, .MeView {
    width: 100%;
    height: 100%;
}

.MeView-myInfo {
    width: 100%;
    height: 562rpx;
    backdrop-filter: blur(30px);
    background: rgba(234, 242, 255, 0.74);
    border-radius: 20rpx;
    position: relative;
}

.MeView-myInfo-MeBG {
    width: 100%;
    height: 100%;
}

.MeView-myInfo-box {
    position: absolute;
    bottom: 48rpx;
    width: 100%;
    height: 268rpx;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.MeView-myInfo-box-content {
    padding: 40rpx;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.35);
    border-radius: 16rpx;
    box-sizing: border-box;
}

.avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-bottom: 10px;
}

.avatar {
    display: block;
    width: 56px;
    height: 56px;
}

.nickname-wrapper {
    display: flex;
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
    color: black;
}

.nickname-label {
    width: 105px;
}

.nickname-input {
    flex: 1;
}

.MeView-myInfo-box-content-data {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: flex-start;
}

.MeView-myInfo-box-content-data-avatar {
    margin-right: 40rpx;
}

.nickname {
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.phone {
    font-size: 24rpx;
    color: rgba(51, 51, 51, 0.8);
}

.functionRegion {
    width: 100%;
    padding: 34rpx;
    box-sizing: border-box;
}
.customerName{
    width: 100%;
    text-align: center;
}
.MeView{
    position: relative;
}
.phoneAndAddress{
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: darkgrey;
}
