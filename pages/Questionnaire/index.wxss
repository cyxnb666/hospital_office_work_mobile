page, .QuestionnaireView {
    width: 100%;
    height: 100%;
    background: #F8F9FD;
    overflow: hidden;
}

.QuestionnaireView {
    display: flex;
    flex-direction: column;
}

.header {
    width: 100%;
    background: linear-gradient(180deg, #88BDF9 0%, #F8F9FD 100%);
    padding: 40rpx 32rpx 60rpx 32rpx;
    box-sizing: border-box;
    text-align: center;
    flex-shrink: 0;
}

.title {
    font-weight: 600;
    font-size: 36rpx;
    color: #000000;
    margin-bottom: 16rpx;
}

.subtitle {
    font-weight: 400;
    font-size: 28rpx;
    color: #666666;
}

.content {
    flex: 1;
    width: 100%;
    padding: 32rpx;
    box-sizing: border-box;
    overflow: hidden;
    background: #FFFFFF;
    margin: 0 32rpx;
    border-radius: 16rpx;
}

.emptyBox {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.empty {
    width: 302rpx;
    height: 228rpx;
    margin-bottom: 44rpx;
}

.emptyText {
    font-weight: 400;
    font-size: 28rpx;
    color: #9CA6B6;
}

.bottomBox {
    width: 100%;
    padding: 32rpx;
    box-sizing: border-box;
    background: #FFFFFF;
    box-shadow: 0 -12rpx 24rpx 0 rgba(232, 234, 240, 0.36);
    flex-shrink: 0;
}

.submitBtn {
    width: 100%;
    height: 88rpx;
    background: linear-gradient(90deg, #5FB6FC 0%, #3C7EE9 100%);
    border-radius: 46rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 400;
    font-size: 32rpx;
    color: #FFFFFF;
}